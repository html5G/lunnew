/* miniprogram/pages/listfb/listfb.wxss */
.listfb {
  margin: 0;
  padding: 0;
}
.listfb-list {
  width: 100%;
  height: 75%;
}
.listfb-describe {
  text-align:center;
  border:2rpx solid #a1a1a1;
  padding:21rpx 30rpx; 
  margin-left: 5rpx;
  margin-top: 10rpx;
  background:#dddddd;
  width: 90%;
  border-radius:25rpx;
}
.listfb-radio {
  display: flex;
  padding-top: 9rpx;
  justify-content: center;
}
.listfb-label {
  font-size: 38rpx;
  width: 100%;
}
.listfb-label-1 {
  padding-left: 10rpx;
}
.listfb-click {
  display: flex;
  justify-content: space-around;
  font-size: 40rpx;
  padding-top: 20rpx;
}
.listfb-click-1 {
    border:2rpx solid #a1a1a1;
    padding:10rpx 40rpx; 
    background:#dddddd;
    border-radius:25rpx;
}